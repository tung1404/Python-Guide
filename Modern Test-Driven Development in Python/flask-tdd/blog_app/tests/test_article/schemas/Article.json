{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Article",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for a article, a Universally Unique IDentifier (UUID)",
        "type": "string",
        "format": "uuid"
      },
      "author": {
        "description": "Name of the article author",
        "type": "string"
      },
      "title": {
        "description": "Title of the article",
        "type": "string"
      },
      "content": {
        "description": "The content of the article",
        "type": "string"
      }
    },
    "required": ["id", "author", "title", "content"]
  }